.field.has-addons.is-fullwidth.pb-3.top-control
  .control.is-expanded
    input.input(
        '*ngIf'='isSingleURL',
        '[placeholder]'='inputPlaceholder',
        '[(ngModel)]'='inputValue',
        '(keydown.enter)'='add()',)
    textarea.textarea(
        '*ngIf'='!isSingleURL',
        '[placeholder]'='inputPlaceholder',
        '[(ngModel)]'='inputValue',)

  .control
    button.button.has-text-grey(
        '(click)'='isSingleURL = !isSingleURL',
        '[title]'='isSingleURL ? "Add multiple URLs" : "Add single URL"')
      span.icon('*ngIf'='isSingleURL')
        i.fas.fa-stream
      span('*ngIf'='!isSingleURL') 1

  .control
    tt-tag-selector(
        '[tags]'='tags',
        '[selectedIds]'='inputTags',
        '(toggle)'='toggleTag($event)',
        '[isTitleCustom]'='true',
        '[isAllTagsVisible]'='false',)
      a.button.has-text-info
        i.fas.fa-hashtag(aria-hidden='true')

  .control
    button.button.has-text-grey('(click)'='add()', title='Add')
      span.icon
        i.fas.fa-plus
