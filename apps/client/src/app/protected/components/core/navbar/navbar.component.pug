ng-container(*ngIf="userService.user$ | async as user")
  nav.navbar.is-primary(role='navigation' aria-label='main navigation')
    .container
      .navbar-brand
        a.navbar-item(routerLink='/app/', (click)='closeMenu()')
          span.icon.is-size-4.has-text-weight-bold
            i.far.fa-bookmark
          span Toread.Today v{{updateService.versionInfo.version}}

        .navbar-item.ml-auto(*ngIf="(uiService.isMobile$ | async) && !(connectionStatus.isOnline$ | async)", title="Your device is offline. Please restore connection to continue.")
          span.icon.has-text-warning
            i.fas.fa-exclamation-triangle

        tt-notifications.navbar-item(*ngIf='uiService.isMobile$ | async', '[userId]'='user.id', [class.ml-auto]="connectionStatus.isOnline$ | async")


        a.navbar-burger.burger(
            role='button',
            aria-label='menu',
            '[class.is-active]'='isMenuExpanded',
            (click)='toggleMenu()')
          span(aria-hidden='true')
          span(aria-hidden='true')
          span(aria-hidden='true')

      .navbar-menu('[class.is-active]'='isMenuExpanded')

        .navbar-start
          a.navbar-item(routerLink='/app/dashboard', routerLinkActive='is-active', (click)='closeMenu()')
            span.icon
              i.fas.fa-chart-line
            span Dashboard
          a.navbar-item(routerLink='/app/items', [queryParams]="{status: 'new'}", routerLinkActive='is-active', (click)='closeMenu()')
            span.icon
              i.fas.fa-list-ul
            span Links
          a.navbar-item(routerLink='/app/tags', routerLinkActive='is-active', (click)='closeMenu()')
            span.icon
              i.fas.fa-tags
            span Tags
          a.navbar-item(routerLink='/app/import', routerLinkActive='is-active', (click)='closeMenu()')
            span.icon
              i.fas.fa-cloud-upload-alt
            span Add & Import
          a.navbar-item(routerLink='/app/roadmap', routerLinkActive='is-active', (click)='closeMenu()')
            span.icon
              i.fas.fa-road
            span Project roadmap

        .navbar-end
          //- mobile menu
          ng-container(*ngIf='isMenuExpanded; else desktopMenu')
            a.navbar-item(routerLink='/app/profile', routerLinkActive='is-active', (click)='closeMenu()')
              span.icon
                i.fas.fa-cog
              span Profile settings

            a.navbar-item((click)='userService.signOut()')
              span.icon
                i.fas.fa-sign-out-alt
              span Sign out

          ng-template('#desktopMenu'='')
            .navbar-item
              .navbar-item(*ngIf="!(connectionStatus.isOnline$ | async)", title="Your device is offline. Please restore connection to continue.")
                span.icon.has-text-warning
                  i.fas.fa-exclamation-triangle
              .navbar-item
                tt-notifications(*ngIf='!(uiService.isMobile$ | async)', '[userId]'='user.id')
              .navbar-item
                .dropdown.is-hoverable.is-right
                  .dropdown-trigger
                    a
                      figure.image.is-24x24(*ngIf="user.photoURL; else userIcon")
                        img.is-rounded([src]="user.photoURL")
                      ng-template("#userIcon"="")
                        span.icon.has-text-white
                          i.far.fa-user-circle
                  .dropdown-menu(role='menu')
                    .dropdown-content
                      a.dropdown-item(routerLink='/app/profile', routerLinkActive='is-active', (click)='closeMenu()')
                        span.icon
                          i.fas.fa-cog
                        span Profile settings
                      hr.dropdown-divider
                      a.dropdown-item((click)='userService.signOut()')
                        span.icon
                          i.fas.fa-sign-out-alt
                        span Sign out
